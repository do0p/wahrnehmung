<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>wahrnehmungServlet</servlet-name>
    <servlet-class>at.lws.wnm.server.service.WahrnehmungsServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>wahrnehmungServlet</servlet-name>
    <url-pattern>/wahrnehmung/store</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>childServlet</servlet-name>
    <servlet-class>at.lws.wnm.server.service.ChildServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>childServlet</servlet-name>
    <url-pattern>/wahrnehmung/child</url-pattern>
  </servlet-mapping>
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Wahrnehmung.html</welcome-file>
  </welcome-file-list>

</web-app>
